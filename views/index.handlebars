<div class='container'>
	<div class='row'>
		<div class='col-md-6 col-md-offset-3'>
			<h1 class='text-center headline'>Bob's Burger Time!</h1>
		</div>
	</div>
</div>
<div class='container'>
	<div class='row'>
		<div class='col-md-4 col-md-offset-2'>
			<h2 class="text-center headline order">Add a Burger</h2>
			<form class="text-center create-update-form headline form" action="/burgers/insertBurgers" method="POST">
				<div class="form-group">
					<label for="burg">Burger Name:</label>
					<input type="text" id="burg" name="burger_name">
				</div>
				<button type="submit">Order up!</button>
			</form>
		</div>
	</div>
</div>
<ul>
	{{#each burgers}}
	{{#unless this.devoured}}
	<li>
		{{this.burger_name}}
		<form action='burgers/update/{{this.id}}?_method=PUT' method="POST">
			<button type='submit'>NOM NOM NOM</button>
		</form>
	</li>
	{{/unless}}
	{{/each}}
</ul>
<h2>Devoured burgers</h2>
<ul>
	{{#each burgers}}
	{{#if this.devoured}}
	<li>
		{{this.burger_name}}
	</li>
	{{/if}}
	{{/each}}
</ul>