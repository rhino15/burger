<h1>Bob's Burger Time!</h1>
<h2>Add a Burger</h2>
<form class="create-update-form" action="/burgers/insertBurgers" method="POST">
	<div class="form-group">
		<label for="burg">Burger Name:</label>
		<input type="text" id="burg" name="burger_name">
	</div>
	<button type="submit">Order up!</button>
</form>
<ul>
	{{#each burgers}}
		{{#unless this.devoured}}
			<li>
				{{this.burger_name}}
				<form action='burgers/update/{{this.id}}?_method=PUT' method="POST">
					<button type='submit'>NOM NOM NOM</button>
				</form>
			</li>
		{{/unless}}
	{{/each}}			
</ul>

<h2>Devoured burgers</h2>
<ul>
	{{#each burgers}}
		{{#if this.devoured}}
			<li>
				{{this.burger_name}}
			</li>	
		{{/if}}
	{{/each}}
</ul>